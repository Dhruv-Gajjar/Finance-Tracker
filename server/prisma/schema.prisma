generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  email    String @unique
}

model Expenses {
  id          Int          @id @default(autoincrement())
  title       String
  type        ExpenseTypes
  description String
  amount      Float
  date        DateTime     @default(now())
}

enum ExpenseTypes {
  Salary
  Bills
  Grocery
  Emi
  Rent
  Subscriptions
  Insurances
}
