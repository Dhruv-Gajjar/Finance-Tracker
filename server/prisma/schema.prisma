generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  email     String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  expenses  Expenses[]
}

model Expenses {
  id          Int          @id @default(autoincrement())
  title       String
  type        ExpenseTypes
  description String
  amount      Float
  date        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now())
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
}

enum ExpenseTypes {
  salary
  bill
  grocery
  emi
  rent
  subscribtion
  insurance
  food
}
