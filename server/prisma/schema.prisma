generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  username       String           @unique
  password       String
  email          String           @unique
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @default(now())
  expenses       Expenses[]
  incomes        Incomes[]
  customCategory CustomCategory[]
}

model Expenses {
  id          Int             @id @default(autoincrement())
  title       String
  type        Types           @default(income)
  category    ExpenseCategory
  description String?
  amount      Float
  date        String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @default(now())
  user        User            @relation(fields: [userId], references: [id])
  userId      Int
}

model Incomes {
  id          Int            @id @default(autoincrement())
  title       String
  type        Types
  category    IncomeCategory
  description String?
  amount      Float
  date        String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @default(now())
  user        User           @relation(fields: [userId], references: [id])
  userId      Int
}

model CustomCategory {
  id           Int    @id @default(autoincrement())
  name         String
  icon         String
  categoryType Types  @default(income)
  user         User   @relation(fields: [userId], references: [id])
  userId       Int
}

enum ExpenseCategory {
  bill
  grocery
  emi
  rent
  subscribtion
  insurance
  food
  travel
}

enum IncomeCategory {
  salary
  bonus
  investment
  gift
  rental_income
  other
}

enum Types {
  income
  expense
}
